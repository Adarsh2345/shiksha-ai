
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isTeacher(userId) {
      return exists(/databases/$(database)/documents/teachers/$(userId));
    }

    match /classrooms/{classroomId} {
      allow read: if request.auth != null;
      // Admin panel can create classrooms when adding the first student.
      allow create: if true;
      // Allow updates from teachers (joining/leaving) and from the unauthenticated admin panel.
      // NOTE: `request.auth == null` is for the dev-only admin panel.
      allow update: if (request.auth != null && isTeacher(request.auth.uid)) || request.auth == null;

      match /posts/{postId} {
        allow read: if request.auth != null;
        allow create, delete: if request.auth != null && isTeacher(request.auth.uid);
      }
    }

    match /teachers/{teacherId} {
      // Authenticated users can read a specific teacher's document.
      allow get: if request.auth != null;
      // The admin panel (unauthenticated) can list and create teachers.
      allow list, create: if true;
      // Teachers can only update their own document.
      allow update: if request.auth != null && request.auth.uid == teacherId;
      // The admin panel can delete any user marked as 'dev_generated'.
      allow delete: if resource.data.dev_generated == true;
    }
    
    match /students/{studentId} {
      // Authenticated users can read a specific student's document.
      allow get: if request.auth != null;
      // The admin panel (unauthenticated) can list and create students.
      allow list, create: if true;
      // Students can only update their own document.
      allow update: if request.auth != null && request.auth.uid == studentId;
      // The admin panel can delete any user marked as 'dev_generated'.
      allow delete: if resource.data.dev_generated == true;
    }

    match /lessonPlans/{lessonPlanId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isTeacher(request.auth.uid);
    }

    match /worksheets/{worksheetId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && isTeacher(request.auth.uid);
    }
  }
}
