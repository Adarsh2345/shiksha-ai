
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isTeacher() {
      // Check if a document for the user exists in the teachers collection.
      return isAuthenticated() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // A user can create their own profile. Only they can update it. Anyone authenticated can read it.
    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(teacherId);
      allow update: if isOwner(teacherId);
      allow delete: if false; 
    }

    match /students/{studentId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(studentId);
      allow update: if false;
      allow delete: if false;
    }

    // Classrooms
    match /classrooms/{classroomId} {
      // Anyone authenticated can view classrooms (to join, or because they are a member)
      allow read: if isAuthenticated(); 
      
      // Teachers can update classrooms (join/leave). Anyone can create one on signup.
      allow create: if isAuthenticated();
      allow update: if isTeacher();
    }
    
    // Classroom posts
    match /classrooms/{classroomId}/posts/{postId} {
        // Anyone authenticated can read posts (access is controlled by UI).
        allow read: if isAuthenticated();
        // Only teachers can create posts.
        allow create: if isTeacher();
        // The author can delete their post.
        allow delete: if isTeacher() && request.auth.uid == resource.data.authorId;
        allow update: if false;
    }

    // Lesson plans and worksheets
    match /lessonPlans/{lessonPlanId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update, delete: if false;
    }

    match /worksheets/{worksheetId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update, delete: if false;
    }
  }
}
